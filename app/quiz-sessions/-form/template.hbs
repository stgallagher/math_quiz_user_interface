<div class="pure-g">
  <div class="pure-u-1-1">
    <form class="form pure-form pure-form-stacked">
      <fieldset>
        <div class="pure-g">
          <div class="pure-u-1-8">
            <label>Date:</label>
            {{ input value=model.date }}

            <label>Time Taken:</label>
            {{ input value=model.timeTaken }}

            <label>Correct:</label>
            {{ input value=model.correct }}

            <button class="button-save pure-button" {{ action "save" }}>Save</button>
            <button class="button-cancel pure-button" {{ action "cancel" }}>Cancel</button>
          </div>
          <div class="pure-u-1-8">

            <label>Wrong:</label>
            {{ input value=model.wrong }}

            <label>Unanswered:</label>
            {{ input value=model.unanswered }}

            <label>Score:</label>
            {{ input value=model.score }}
        </div>
      </div>
    </fieldset>
  </form>
  </div>
</div>
