<div class="pure-g">
  <div class="pure-u-1-8">
    <p class="label">Level</p>
    <p class="text">{{model.level}}</p>
    <p class="label">Operator</p>
    <p class="text">{{model.operator}}</p>
    <p class="label">Max Time</p>
    <p class="text">{{model.maxTime}}</p>
    {{#with quizSessions.firstObject as firstSession}}
      {{#with quizSessions.lastObject as lastSession}}
      <p class="label">Quiz Sessions</p>
      <p class="text">From {{firstSession.id}} to {{lastSession.id}}</p>
      {{/with}}
    {{/with}}
    <p class="label">Problem Size</p>
    {{#with problems.length as plength}}
      <p class="text">{{plength}}</p>
    {{/with}}
    <div class="link-tos">
      {{link-to "Edit quiz" "quizzes.edit" model}}
    </div>
    <div class="link-tos">
      {{link-to "All quizzes" "quizzes.index"}}
    </div>
  </div>
  <div class="pure-u-5-6">
    {{#each problem in model.problems}}
      <div class="problem-container-sm">
        <div class="problem-frame-sm">
          <div class="given-problem-sm">
            <div class="problem-top-sm">
              {{problem.topFactor}}
            </div>
            <div class="problem-bottom-sm">
              {{problem.operator}}{{problem.bottomFactor}}
            </div>
          </div>
          <div class="answer-problem-sm">
              {{problem.answer}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
