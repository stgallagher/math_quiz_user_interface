<div class="link-tos">
  {{link-to 'Create a new quiz' 'quizzes.new'}}
</div>
<table class="pure-table pure-table-striped">
  <thead>
    <th>Level</th>
    <th>Operator</th>
    <th>Max Time</th>
    <th></th>
  </thead>
  <tbody>
    {{#each quiz in model}}
      <tr>
        <td class="resource-names">{{link-to quiz.level 'quizzes.show' quiz}}</td>
        <td class="resource-names">{{quiz.operation}}</td>
        <td class="resource-names">{{quiz.maxTime}}</td>
        <td><a href="#" {{action "delete" quiz}}>Delete</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
