<div class="pure-g">
  <div class="pure-u-1-4">
    <div class="image-container">
      <div class="image">
        <img src="/assets/images/person.png" alt="no photo available" class="w100px" />
        <div class="link-tos">
          {{link-to "Edit student" "students.edit" model}}
        </div>
        <div class="link-tos">
          {{link-to "List of all students" "students.index"}}
        </div>
      </div>
    </div>
  </div>
  <div class="pure-u-1-8">
    <p class="label">Name</p>
    <p class="text">{{model.fullName}}</p>
    <p class="label">Gender</p>
    <p class="text">{{model.gender}}</p>
    <p class="label">Grade</p>
    <p class="text">{{model.grade}}</p>
  </div>
  <div class="pure-u-1-8">
    {{#with model.classroom.teacher as teacher }}
      <p class="label">Teacher</p>
      <p class="text">{{link-to teacher.fullName 'teachers.show' teacher}}</p>
    {{/with}}
    {{#with model.classroom as classroom }}
      <p class="label">Classroom</p>
      <p class="text">{{link-to classroom.name 'classrooms.show' classroom}}</p>
    {{/with}}
  </div>
  <div class="pure-u-1-8">
    <p class="label">Quiz Dates</p>
    {{#each quizSession in model.quizSessions}}
      <p class="text">Took quiz #{{link-to quizSession.quiz.id 'quizSessions.show' quizSession}} on {{quizSession.formattedDate}}</p>
    {{/each}}
  </div>
</div>
